<Window x:Class="Test.ListViewDemo.Views.UsingSortAndGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:swd="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
        xmlns:local="clr-namespace:Test.ListViewDemo.ViewModels"
        xmlns:view="clr-namespace:Test.ListViewDemo.Views"
        mc:Ignorable="d"
        Title="UsingSortAndGroup"
        d:DataContext="{d:DesignInstance local:MainViewModel}"
        Height="450"
        Width="800">

    <Window.Resources>
        <CollectionViewSource x:Key="cvs"
                              Source="{Binding StudentList}"
                              Filter="CollectionViewSource_Filter">
            <CollectionViewSource.GroupDescriptions>
                <swd:PropertyGroupDescription PropertyName="Sex" />
            </CollectionViewSource.GroupDescriptions>
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Age" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>

        <Style x:Key="HeaderContainerStyle" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Foreground" Value="#828895" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="Height" Value="52" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Margin="33,0,0,0"
                                       Text="{TemplateBinding Content}"
                                       VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ListViewItemContainerStyle" TargetType="{x:Type ListViewItem}">
            <Setter Property="Height" Value="60" />
            <Setter Property="Foreground" Value="#212D46" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <GridViewRowPresenter Margin="28,0,0,0" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!--  设置触发器  -->
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="true">
                    <Setter Property="Background" Value="#2964FF" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>

                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Background" Value="LightGreen" />
                    <Setter Property="Foreground" Value="Red" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="ControlTemplate" TargetType="Button">
            <TextBlock FontSize="14"
                       FontWeight="Regular"
                       Foreground="#FFFFFF"
                       Text="{TemplateBinding Content}" />
        </ControlTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="筛选："
                       FontSize="14"
                       VerticalAlignment="Center" />
            <TextBox HorizontalAlignment="Left"
                     FontSize="14"
                     Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center"
                     Height="36"
                     Width="200">
                <TextBox.InputBindings>
                    <KeyBinding Command="{Binding RefreshCommand}" Key="Enter" />
                </TextBox.InputBindings>
            </TextBox>
        </StackPanel>

        <!--  用于设置ListView标题比例(不能删除!!!)  -->
        <Grid Grid.Row="1" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" x:Name="col1" />
            <Grid Grid.Column="1" x:Name="col2" />
            <Grid Grid.Column="2" x:Name="col3" />
            <Grid Grid.Column="3" x:Name="col4" />
        </Grid>

        <!--  ItemsSource="{Binding Source={StaticResource cvs}}"  -->
        <ListView Grid.Row="1"
                  SelectionMode="Single"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.CanContentScroll="True"
                  ScrollViewer.IsDeferredScrollingEnabled="True"
                  VirtualizingPanel.ScrollUnit="Item"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  BorderThickness="0"
                  ItemContainerStyle="{StaticResource ListViewItemContainerStyle}"
                  ItemsSource="{Binding CollectionView}"
                  SelectedItem="{Binding CurrentSelectedStudent}">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn Header="Id"
                                    DisplayMemberBinding="{Binding Id}"
                                    Width="{Binding ElementName=col1, Path=ActualWidth}"
                                    HeaderContainerStyle="{StaticResource HeaderContainerStyle}" />
                    <GridViewColumn Header="姓名"
                                    DisplayMemberBinding="{Binding Name}"
                                    Width="{Binding ElementName=col2, Path=ActualWidth}"
                                    HeaderContainerStyle="{StaticResource HeaderContainerStyle}" />
                    <GridViewColumn Header="地址"
                                    DisplayMemberBinding="{Binding Address}"
                                    Width="{Binding ElementName=col3, Path=ActualWidth}"
                                    HeaderContainerStyle="{StaticResource HeaderContainerStyle}" />
                    <GridViewColumn Header="年龄"
                                    Width="{Binding ElementName=col4, Path=ActualWidth}"
                                    HeaderContainerStyle="{StaticResource HeaderContainerStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Age}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontSize" Value="14" />
                                                <Setter Property="Foreground" Value="#212D46" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}}" Value="True">
                                                        <Setter Property="Foreground" Value="#FFFFFF" />
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}}" Value="True">
                                                        <Setter Property="Foreground" Value="#FFFFFF" />
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <!--  鼠标悬浮在上面时的操作按钮  -->
                                    <Border Margin="-60,0,0,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}, Mode=FindAncestor}}" Value="false">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <DockPanel>
                                            <Button Height="20"
                                                    Margin="0,0,10,0"
                                                    Command="{Binding DataContext.DownloadResourceCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}, AncestorLevel=1, Mode=FindAncestor}}"
                                                    CommandParameter="{Binding}"
                                                    Cursor="Hand"
                                                    Content="下载"
                                                    Template="{StaticResource ControlTemplate}" />
                                            <Button Height="20"
                                                    Margin="0,0,10,0"
                                                    Command="{Binding DataContext.PreviewResourceCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}, AncestorLevel=1, Mode=FindAncestor}}"
                                                    CommandParameter="{Binding}"
                                                    Cursor="Hand"
                                                    Content="预览"
                                                    Template="{StaticResource ControlTemplate}" />
                                            <Button Height="20"
                                                    Margin="0,0,10,0"
                                                    Command="{Binding DataContext.CollectResourceCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}, AncestorLevel=1, Mode=FindAncestor}}"
                                                    CommandParameter="{Binding}"
                                                    Cursor="Hand"
                                                    Content="收藏"
                                                    Template="{StaticResource ControlTemplate}" />
                                            <Button Height="20"
                                                    Margin="0,0,10,0"
                                                    Command="{Binding DataContext.DeleteResourceCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}, AncestorLevel=1, Mode=FindAncestor}}"
                                                    CommandParameter="{Binding}"
                                                    Cursor="Hand"
                                                    Content="删除"
                                                    Template="{StaticResource ControlTemplate}" />
                                        </DockPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
            <ListView.GroupStyle>
                <GroupStyle>
                    <!--<GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Margin" Value="0,0,0,5" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <Expander IsExpanded="True"
                                                  Background="#FF112255"
                                                  BorderBrush="#FF002255"
                                                  BorderThickness="1,1,1,5">
                                            <Expander.Header>
                                                <DockPanel>
                                                    <TextBlock FontWeight="Bold"
                                                               Text="{Binding Path=Name}"
                                                               Margin="5,0,0,0"
                                                               Width="100" />
                                                    <TextBlock FontWeight="Bold" Text="{Binding Path=ItemCount}" />
                                                </DockPanel>
                                            </Expander.Header>
                                            <Expander.Content>
                                                <ItemsPresenter />
                                            </Expander.Content>
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>-->
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock FontSize="14"
                                           FontWeight="Bold"
                                           Margin="5,0"
                                           Text="{Binding Name}" />
                                <TextBlock FontSize="14"
                                           FontWeight="Bold"
                                           Text="{Binding Path=ItemCount, StringFormat={}{0} item(s)}" />
                            </StackPanel>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>
    </Grid>
</Window>
