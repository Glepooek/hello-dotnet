<Application x:Class="Test.Loading.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Test.Loading"
             StartupUri="MainView.xaml">
    <Application.Resources>
        <Style x:Key="CommonWindowStyle" TargetType="Window">
            <Setter Property="AllowsTransparency" Value="False" />
            <Setter Property="WindowStyle" Value="None" />
            <Setter Property="ResizeMode" Value="CanMinimize" />
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome CaptionHeight="2"
                                  CornerRadius="0"
                                  ResizeBorderThickness="4"
                                  GlassFrameThickness="-1" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Window">
                        <Border Padding="2" Background="Transparent">
                            <Border CornerRadius="5"
                                    Background="White"
                                    BorderThickness="0.3"
                                    BorderBrush="Gray">
                                <ContentPresenter ClipToBounds="True" />
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
