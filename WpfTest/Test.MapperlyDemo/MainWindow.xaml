<Window x:Class="Test.MapperlyDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mapperly Demo"
        Height="600"
        Width="800">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Margin="0,0,0,12">
            <TextBlock Text="Order → OrderDto 映射结果"
                       FontSize="18"
                       FontWeight="Bold" />
            <TextBlock x:Name="TxtOrderInfo"
                       Margin="0,8,0,0"
                       FontSize="14" />
        </StackPanel>

        <DataGrid Grid.Row="1"
                  x:Name="GridItems"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ProductId"
                                    Binding="{Binding ProductId}"
                                    Width="80" />
                <DataGridTextColumn Header="ProductName"
                                    Binding="{Binding ProductName}"
                                    Width="*" />
                <DataGridTextColumn Header="Quantity"
                                    Binding="{Binding Quantity}"
                                    Width="80" />
                <DataGridTextColumn Header="UnitPrice"
                                    Binding="{Binding UnitPrice, StringFormat=¥{0:F2}}"
                                    Width="100" />
                <DataGridTextColumn Header="SubTotal"
                                    Binding="{Binding SubTotal, StringFormat=¥{0:F2}}"
                                    Width="100" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
