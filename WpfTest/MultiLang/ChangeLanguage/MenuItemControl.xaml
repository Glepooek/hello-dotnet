<UserControl x:Class="ChangeLanguage.MenuItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:langr="http://schemas.glepooek.com/langresource"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">

    <UserControl.Resources>
        <langr:LanguageSelectionViewModel x:Key="LanguageSelectionViewModel" />
        <langr:CurrentCultureConverter x:Key="CurrentCultureConverter" />
    </UserControl.Resources>

    <Menu Name="menu1" Background="#00000000">
        <MenuItem Header="{langr:Translate menuItem1}" Name="menuFind">
            <MenuItem Header="{langr:Translate menuItem1a}" Name="menuFind1" />
            <MenuItem Header="{langr:Translate menuItem1b}" Name="menuFind2" />
            <Separator />
            <MenuItem Header="{langr:Translate menuItem1c}" Name="menuFind3" />
        </MenuItem>
        <MenuItem Header="{langr:Translate menuItem2}" Name="menuClear" />
        <MenuItem Header="{langr:Translate menuItem3}" Name="menuProcess" />
        <MenuItem Header="{langr:Translate menuItem4}" Name="menuHelp">
            <MenuItem Header="{langr:Translate menuItem4a}" Name="menuHelp1" />
            <MenuItem Header="{langr:Translate menuItem4b}"
                      Name="menuHelp2"
                      ItemsSource="{Binding Source={StaticResource LanguageSelectionViewModel}, Path=Languages}"
                      Click="menuHelp2_Click">
                <MenuItem.ItemContainerStyle>
                    <Style TargetType="{x:Type MenuItem}">
                        <Setter Property="Header" Value="{Binding NativeName}" />
                        <Setter Property="IsChecked" Value="{Binding NativeName, Mode=OneWay, Converter={StaticResource CurrentCultureConverter}}" />
                    </Style>
                </MenuItem.ItemContainerStyle>
            </MenuItem>
            <MenuItem Header="{langr:Translate menuItem4c}" Name="menuHelp3" />
        </MenuItem>
    </Menu>
</UserControl>
