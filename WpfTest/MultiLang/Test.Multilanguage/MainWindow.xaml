<Window x:Class="Test.Multilanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Test.Multilanguage"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Grid>
        <StackPanel Margin="43,54,411,0">
            <TextBlock Text="{local:StringResource test1, DesignValue=测试一}" />
            <TextBlock Text="{local:StringResource test2, DesignValue=测试二}" />
            <TextBlock Text="{local:StringResource test3, DesignValue=测试三}" />
            <TextBlock Text="{local:StringResource test4, DesignValue=测试四}" />
        </StackPanel>

        <Button Content="{local:StringResource btnChina,
                                               DesignValue=中文}"
                HorizontalAlignment="Left"
                Margin="389,90,0,0"
                VerticalAlignment="Top"
                Width="75"
                Click="Button_Click_1" />
        <Button Content="{local:StringResource btnEnglish,
                                               DesignValue=英文}"
                HorizontalAlignment="Left"
                Margin="389,117,0,0"
                VerticalAlignment="Top"
                Width="75"
                Click="Button_Click_2" />

        <Button Content="{local:StringResource btnToast,
                                               DesignValue=显示提示}"
                HorizontalAlignment="Left"
                Margin="389,147,0,0"
                VerticalAlignment="Top"
                Width="75"
                Click="Button_Click_3" />
    </Grid>
</Window>
