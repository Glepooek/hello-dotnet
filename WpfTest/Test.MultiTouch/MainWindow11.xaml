<Window x:Class="Test.MultiTouch.MainWindow11"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test.MultiTouch"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">

    <Window.Resources>
        <Style TargetType="Image">
            <Setter Property="Stretch" Value="None" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
    </Window.Resources>

    <Grid x:Name="touchPad"
          Background="Gray"
          ManipulationStarting="touchPad_ManipulationStarting"
          ManipulationDelta="touchPad_ManipulationDelta">
        <Image Source="Images/P1.jpg" IsManipulationEnabled="True">
            <Image.RenderTransform>
                <MatrixTransform Matrix="0.5 0 0 0.5 100 100" />
            </Image.RenderTransform>
        </Image>

        <Image Source="Images/P2.jpg" IsManipulationEnabled="True">
            <Image.RenderTransform>
                <MatrixTransform Matrix="0.5 0 0 0.5 100 100" />
            </Image.RenderTransform>
        </Image>

        <Image Source="Images/P3.jpg" IsManipulationEnabled="True">
            <Image.RenderTransform>
                <MatrixTransform Matrix="0.5 0 0 0.5 100 100" />
            </Image.RenderTransform>
        </Image>
    </Grid>

</Window>
