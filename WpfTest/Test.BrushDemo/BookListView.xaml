<UserControl x:Class="Test.TileBrushDemo.BookListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Test.TileBrushDemo"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.Resources>
        <local:ContentHeightForBookrackConverter x:Key="ContentHeightForBookrackConverter" />

        <Style x:Key="DefaultTextBlockStyle"
               TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground"
                    Value="#0B1926" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
        </Style>

        <Style x:Key="EnterBookDetailButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="BorderBrush"
                    Value="Transparent" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalAlignment}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BookListContainerStyle"
               TargetType="ListBoxItem">
            <Setter Property="FocusVisualStyle"
                    Value="{x:Null}" />
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="Margin"
                    Value="0,24,0,40" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid Width="408"
                              Height="115">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Button Width="86"
                                    Height="110"
                                    Style="{StaticResource EnterBookDetailButtonStyle}">
                                <Border CornerRadius="8"
                                        BorderBrush="Blue"
                                        BorderThickness="2">
                                    <Image x:Name="img"
                                           Stretch="Uniform"
                                           Tag="BookListView"
                                           Source="{Binding VolumePic}" />
                                </Border>
                            </Button>

                            <Grid x:Name="grid"
                                  Grid.Column="1"
                                  Margin="16,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock x:Name="series"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           TextWrapping="Wrap"
                                           Style="{StaticResource DefaultTextBlockStyle}"
                                           Text="{Binding VolumeName}"
                                           ToolTip="{Binding VolumeName}" />
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BookListBoxStyle"
               TargetType="{x:Type ListBox}">
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                    Value="Disabled" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                    Value="Auto" />
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="ScrollViewer.PanningMode"
                    Value="Both" />
            <Setter Property="ItemContainerStyle"
                    Value="{StaticResource BookListContainerStyle}" />
            <Setter Property="Margin"
                    Value="24" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBox}">
                        <Grid>
                            <Border>
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform Y="110" />
                                    </TransformGroup>
                                </Border.RenderTransform>
                                <Border.Background>
                                    <ImageBrush ImageSource="/Images/bg_shelf.png"
                                                TileMode="Tile"
                                                Viewport="{Binding ElementName=content, Path=ActualHeight, Converter={StaticResource ContentHeightForBookrackConverter}}" />
                                </Border.Background>
                            </Border>
                            <ScrollViewer>
                                <ItemsPresenter x:Name="content" />
                            </ScrollViewer>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Add Book"
                    Command="{Binding AddBookCommand}" />
            <Button Content="Remove Book"
                    Margin="10,0"
                    Command="{Binding RemoveBookCommand}" />
        </StackPanel>

        <ListBox x:Name="bookList"
                 Grid.Row="1"
                 Margin="24,0"
                 Style="{StaticResource BookListBoxStyle}"
                 VerticalAlignment="Top"
                 ItemsSource="{Binding BookList}" />
    </Grid>
</UserControl>