<Window x:Class="EmployeeManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EmployeeManager;assembly="
        Title="Employee Manager"
        Width="800"
        Height="600">

    <Window.Resources>
        <local:StateMachineVisibilityConverter x:Key="StateMachineConverter" />
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Opacity" Value="1" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.3" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ToolBar HorizontalAlignment="Stretch"
                 VerticalAlignment="Center"
                 VerticalContentAlignment="Center"
                 Background="White"
                 ToolBarTray.IsLocked="True">
            <Button VerticalAlignment="Center"
                    Command="{Binding SearchCommand}"
                    Style="{StaticResource ButtonStyle}"
                    ToolTip="Search">
                <Image Source="Images\Search.png" />
            </Button>
            <Button VerticalAlignment="Center"
                    Command="{Binding EditCommand}"
                    Style="{StaticResource ButtonStyle}"
                    ToolTip="Edit">
                <Image Source="Images\Edit.png" />
            </Button>
        </ToolBar>

        <DataGrid Grid.Row="1"
                  HorizontalAlignment="Stretch"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  IsSynchronizedWithCurrentItem="True"
                  ItemsSource="{Binding Employees}"
                  SelectedItem="{Binding SelectedEmployee, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  SelectionMode="Single"
                  SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*"
                                    Binding="{Binding Title}"
                                    Header="Title" />
                <DataGridTextColumn Width="*"
                                    Binding="{Binding FirstName}"
                                    Header="First Name" />
                <DataGridTextColumn Width="*"
                                    Binding="{Binding LastName}"
                                    Header="Last Name" />
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding SearchCommand}" Header="Search" />
                    <MenuItem Command="{Binding EditCommand}" Header="Edit" />
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>

        <Grid Grid.Row="1" Visibility="{Binding StateMachine.State, Converter={StaticResource StateMachineConverter}, ConverterParameter=Editing}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="250" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <SolidColorBrush Opacity="0.7" Color="LightGray" />
            </Grid.Background>

            <Border Grid.Row="1"
                    Grid.Column="1"
                    Padding="5"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="10">

                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0"
                           Grid.ColumnSpan="2"
                           Margin="5"
                           HorizontalAlignment="Center"
                           FontSize="14">
                        Edit Employee Details
                    </Label>
                    <Label Grid.Row="1"
                           Grid.Column="0"
                           Margin="5">
                        Title:
                    </Label>
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Margin="5"
                             Text="{Binding SelectedEmployee.Title}" />
                    <Label Grid.Row="2"
                           Grid.Column="0"
                           Margin="5">
                        First Name:
                    </Label>
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Margin="5"
                             Text="{Binding SelectedEmployee.FirstName}" />
                    <Label Grid.Row="3"
                           Grid.Column="0"
                           Margin="5">
                        Last Name:
                    </Label>
                    <TextBox Grid.Row="3"
                             Grid.Column="1"
                             Margin="5"
                             Text="{Binding SelectedEmployee.LastName}" />
                    <Button Grid.Row="4"
                            Grid.ColumnSpan="2"
                            Width="60"
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Command="{Binding EndEditCommand}"
                            Content="Confirm" />
                </Grid>

            </Border>
        </Grid>

        <local:AnimatedGIFControl x:Name="_animatedGif"
                                  Grid.Row="1"
                                  Visibility="{Binding StateMachine.State, Converter={StaticResource StateMachineConverter}, ConverterParameter=Searching}" />

    </Grid>
</Window>
