<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sciChart="http://schemas.abtsoftware.co.uk/scichart"
                    xmlns:local="clr-namespace:Digihail.Controls">
    <local:OverviewMarginConverter x:Key="OverviewMarginConverter" />
    <Style TargetType="Border" x:Key="OverviewRestThumb">
        <Setter Property="Width" Value="3" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="-3.3,0.1"
                                     EndPoint="1,1">
                    <LinearGradientBrush.GradientStops>
                        <GradientStopCollection>
                            <GradientStop Color="#FFcacaca"
                                          Offset="0" />
                            <GradientStop Color="#FF898989"
                                          Offset="1" />
                        </GradientStopCollection>
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Border" x:Key="OverviewRestStyle">
        <Setter Property="Opacity" Value="0.45" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0.5,0.15"
                         EndPoint="0.5,1">
                    <LinearGradientBrush.GradientStops>
                        <GradientStopCollection>
                            <GradientStop Color="#FF4a5557"
                              Offset="0" />
                            <GradientStop Color="#FF657478"
                              Offset="1" />
                        </GradientStopCollection>
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type local:ChartOverviewWithScale}">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="OverviewTemplate">
            <Setter.Value>
                <ControlTemplate TargetType="sciChart:SciChartOverview">
                    <Grid Name="PART_Container">
                        <sciChart:SciChartSurface x:Name="PART_OverviewControl" 
                                                  BorderThickness="0"
                                                  Background="{TemplateBinding Background}"
                                                  FontSize="{TemplateBinding FontSize}"
                                                  FontWeight="{TemplateBinding FontWeight}"
                                                  Foreground="{TemplateBinding Foreground}"
                                                  Padding="{TemplateBinding Padding}">
                            <sciChart:SciChartSurface.RenderableSeries>
                                <sciChart:FastLineRenderableSeries />
                            </sciChart:SciChartSurface.RenderableSeries>
                            <sciChart:SciChartSurface.YAxis>
                                <sciChart:NumericAxis AutoRange="Always"
                                                      DrawMajorGridLines="False"
                                                      DrawMinorGridLines="False"
                                                      TextFormatting="###E+0"
                                                      GrowBy="0.2,0.2"
                                                      Visibility="Collapsed" />
                            </sciChart:SciChartSurface.YAxis>
                        </sciChart:SciChartSurface>
                        <StackPanel Name="PART_RangeSliderContainer" 
                                    Orientation="Horizontal" >
                            <Border Style="{StaticResource OverviewRestStyle}">
                                <Rectangle Name="PART_LeftEdge" />
                            </Border>
                            <Border Style="{StaticResource OverviewRestThumb}">
                                <Thumb Name="PART_LeftThumb" 
                                       Cursor="SizeWE" 
                                       Opacity="0"/>
                            </Border>
                            <Border>
                                <Thumb Name="PART_MiddleThumb" 
                                       Cursor="Hand" 
                                       Opacity="0" />
                            </Border>
                            <Border Style="{StaticResource OverviewRestThumb}">
                                <Thumb Name="PART_RightThumb" 
                                       Cursor="SizeWE" 
                                       Opacity="0" />
                            </Border>
                            <Border Style="{StaticResource OverviewRestStyle}" x:Name="RightEdgeBorder">
                                <Rectangle Name="PART_RightEdge" />
                            </Border>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ChartOverviewWithScale}">
                    <Grid HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                              Width="{Binding Path=OverviewSciChart.XAxis.ActualWidth, RelativeSource={RelativeSource AncestorType=local:ChartOverviewWithScale}}">
                        <Grid.Margin>
                            <MultiBinding Converter="{StaticResource OverviewMarginConverter}">
                                <MultiBinding.Bindings>
                                    <Binding Path ="OverviewSciChart.YAxis.ActualWidth" RelativeSource="{RelativeSource AncestorType=local:ChartOverviewWithScale}" />
                                    <Binding Path="OverviewSciChart.Padding.Left" RelativeSource="{RelativeSource AncestorType=local:ChartOverviewWithScale}" />
                                </MultiBinding.Bindings>
                            </MultiBinding>
                        </Grid.Margin>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <sciChart:SciChartOverview Grid.Row="0" x:Name="Overview"
                                                       sciChart:ThemeManager.Theme="BlackSteel"
                                                       Background="Transparent"
                                                       SeriesColor="{TemplateBinding DatasColor}"
                                                       Template="{TemplateBinding OverviewTemplate}"
                                                       ParentSurface="{TemplateBinding OverviewSciChart}"
                                                       SelectedRange="{Binding Path=OverviewSciChart.XAxis.VisibleRange, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=local:ChartOverviewWithScale}}" />
                        <Border Grid.Row="1" 
                                    Height="1"
                                    VerticalAlignment="Top"
                                    Background="#A1A1A3" />
                        <ItemsControl Grid.Row="1" 
                                          x:Name="OverviewTicks"
                                          VerticalAlignment="Top"
                                          Margin="0,-6,0,0"
                                          ItemsSource="{Binding ScaleValueList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ChartOverviewWithScale}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Grid />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border HorizontalAlignment="{Binding ContainerHorizontalAlignment}" 
                                                    Width="{Binding Size}" >
                                        <StackPanel VerticalAlignment="Bottom">
                                            <Border HorizontalAlignment="{Binding LabelHorizontalAlignment}" 
                                                        Height="6" 
                                                        Width="1" 
                                                        Background="#A1A1A3"/>
                                            <TextBlock Margin="0,10,0,0" 
                                                           Text="{Binding Label}" 
                                                           HorizontalAlignment="{Binding LabelHorizontalAlignment}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="FontSize" Value="12" />
                                                        <Setter Property="Foreground" Value="#9F9FA3" />
                                                        <Setter Property="FontFamily" Value="Microsoft YaHei" />
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>