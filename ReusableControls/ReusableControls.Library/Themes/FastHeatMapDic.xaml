<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Digihail.Controls"
                    xmlns:boundedMouse="clr-namespace:Digihail.Controls;assembly=Chart.Commons"
                    xmlns:sciChart="http://schemas.abtsoftware.co.uk/scichart">
    <!--#region FastHeatMap-->
    <local:NoRoundingConverter x:Key="NoRoundingConverter" />
    <ControlTemplate x:Key="DataMarker">
        <Rectangle Width="5" 
                   Height="5" 
                   Fill="Transparent" 
                   StrokeThickness="0" />
    </ControlTemplate>
    <Style TargetType="{x:Type local:FastHeatMap}">
        <Setter Property="TooltipLabelTemplate">
            <Setter.Value>
                <ControlTemplate TargetType="sciChart:TemplatableControl">
                    <Border Visibility="{Binding TooltipVisibility, RelativeSource={RelativeSource AncestorType=local:FastHeatMap}}" 
                            Height=" 44" 
                            Background="#80000000" 
                            Padding="12,0" >
                        <StackPanel Orientation="Horizontal" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Left">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="FontFamily" Value="MicrosoftYaHei"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Foreground" Value="#85ccdf"/>
                                </Style>
                            </StackPanel.Resources>
                            <TextBlock Text="{Binding XValue, Converter={StaticResource NoRoundingConverter}, StringFormat='X : {0}'}" />
                            <TextBlock  Text="{Binding YValue, Converter={StaticResource NoRoundingConverter}, StringFormat='Y : {0}'}"
                                        Margin="5,0,0,0" />
                            <TextBlock  Text="{Binding ZValue, StringFormat=\{0:0.0\}}"
                                        Margin="5,0,0,0" />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="SelectedDataBoxStyle">
            <Setter.Value>
                <Style TargetType="{x:Type sciChart:BoxAnnotation}">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderBrush" Value="#FFFFFF" />
                    <Setter Property="BorderThickness" Value="3" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="CellLineStyle">
            <Setter.Value>
                <Style TargetType="sciChart:LineAnnotation">
                    <Setter Property="StrokeThickness" Value="1" />
                    <Setter Property="Stroke" Value="#A1A1A3" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="CellTextStyle">
            <Setter.Value>
                <Style TargetType="sciChart:BoxAnnotation">
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="FontWeight" Value="DemiBold" />
                    <Setter Property="FontFamily" Value="MicroSoftYaHei" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type sciChart:BoxAnnotation}">
                                <Border x:Name="PART_BoxAnnotationRoot" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="{TemplateBinding CornerRadius}" Margin="{TemplateBinding Margin}">
                                    <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="Center" Margin="{TemplateBinding Padding}" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FastHeatMap}">
                    <Grid>
                        <sciChart:SciChartSurface x:Name="PartSciChartSurface" 
                                                  Margin="{TemplateBinding Margin}" 
                                                  BorderBrush="{TemplateBinding ChartBorderBrush}"
                                                  sciChart:ThemeManager.Theme="BlackSteel"
                                                  XAxis="{Binding ChartXAxis, RelativeSource={RelativeSource AncestorType=local:FastHeatMap}}"
                                                  YAxis="{Binding ChartYAxis, RelativeSource={RelativeSource AncestorType=local:FastHeatMap}}"
                                                  Background="{TemplateBinding SurfaceBackground}">
                            <sciChart:SciChartSurface.GridLinesPanelStyle>
                                <Style TargetType="sciChart:GridLinesPanel">
                                    <Setter Property="BorderThickness" Value="{Binding ChartBorderThickness, RelativeSource={RelativeSource AncestorType=local:FastHeatMap}}" />
                                </Style>
                            </sciChart:SciChartSurface.GridLinesPanelStyle>
                            <sciChart:SciChartSurface.RenderableSeries>
                                <sciChart:FastHeatMapRenderableSeries DataSeries="{Binding Series, RelativeSource={RelativeSource AncestorType=local:FastHeatMap}}" 
                                                                      Maximum="{Binding DataMax, RelativeSource={RelativeSource AncestorType=local:FastHeatMap}}"
                                                                      ColorMap="{TemplateBinding DataColorMap}"
                                                                      RolloverMarkerTemplate="{StaticResource DataMarker}" />
                            </sciChart:SciChartSurface.RenderableSeries>
                            <sciChart:SciChartSurface.ChartModifier>
                                <sciChart:ModifierGroup>
                                    <boundedMouse:BoundedMouseWheelZoomModifier IsEnabled="{TemplateBinding IsEnableZoom}" />
                                    <boundedMouse:RecoverZoomExtentsModifier InitialXRange="{TemplateBinding XAxisVisibleRange}"
                                                                      InitialYRange="{TemplateBinding YAxisVisibleRange}"
                                                                      IsEnabled="{TemplateBinding IsEnableZoom}" />
                                    <sciChart:RolloverModifier ReceiveHandledEvents="True"  
                                                               x:Name="PartRolloverModifier"
                                                               UseInterpolation="True" 
                                                               ShowAxisLabels="False"
                                                               DrawVerticalLine="False"
                                                               TooltipLabelTemplate="{TemplateBinding TooltipLabelTemplate}" />
                                </sciChart:ModifierGroup>
                            </sciChart:SciChartSurface.ChartModifier>
                            <sciChart:SciChartSurface.Annotations>
                                <sciChart:BoxAnnotation x:Name="PartSelectedBox" 
                                                        Style="{TemplateBinding SelectedDataBoxStyle}"/>
                            </sciChart:SciChartSurface.Annotations>
                        </sciChart:SciChartSurface>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->
</ResourceDictionary>