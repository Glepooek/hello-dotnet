<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sciChart="http://schemas.abtsoftware.co.uk/scichart"
    xmlns:local="clr-namespace:ReusableControls.Library.FastLineChart">
    
    <Style TargetType="{x:Type local:FastLineChart}">
        <Setter Property="TooltipLabelTemplate">
            <Setter.Value>
                <ControlTemplate TargetType="sciChart:TemplatableControl">
                    <Border Height=" 44" 
                            Background="#80000000" 
                            Padding="12,0" >
                        <StackPanel Orientation="Horizontal" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Left">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="FontFamily" Value="Microsoft YaHei"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Foreground" Value="#85ccdf"/>
                                </Style>
                            </StackPanel.Resources>
                            <TextBlock Text="{Binding XValue, StringFormat='X: {0:yyyy-MM-dd HH:mm:ss}'}" />
                            <TextBlock  Text="{Binding YValue, StringFormat='Y: {0:0.0}'}"
                                        Margin="5,0,0,0" />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="DataSelectionLineStyle" >
            <Setter.Value>
                <Style TargetType="{x:Type sciChart:VerticalLineAnnotation}">
                    <Setter Property="Stroke" Value="#5ACDCF" />
                    <Setter Property="StrokeThickness" Value="3" />
                    <Setter Property="VerticalAlignment" Value="Stretch" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FastLineChart}">
                    <sciChart:SciChartSurface x:Name="PartSciChartSurface" 
                                                  Margin="{TemplateBinding Margin}"
                                                  BorderBrush="{TemplateBinding ChartBorderBrush}"
                                                  sciChart:ThemeManager.Theme="BlackSteel"
                                                  XAxis="{Binding ChartXAxis, RelativeSource={RelativeSource AncestorType=local:FastLineChart}}"
                                                  YAxis="{Binding ChartYAxis, RelativeSource={RelativeSource AncestorType=local:FastLineChart}}"
                                                  Background="{TemplateBinding SurfaceBackground}">
                        <sciChart:SciChartSurface.GridLinesPanelStyle>
                            <Style TargetType="{x:Type sciChart:GridLinesPanel}">
                                <Setter Property="BorderThickness" Value="{Binding ChartBorderThickness, RelativeSource={RelativeSource AncestorType=local:FastLineChart}}" />
                            </Style>
                        </sciChart:SciChartSurface.GridLinesPanelStyle>
                        <sciChart:SciChartSurface.RenderableSeries>
                            <sciChart:FastLineRenderableSeries SeriesColor="{TemplateBinding DatasColor}"
                                                               PointMarker="{TemplateBinding DatasPointMarker}"
                                                               DataSeries="{TemplateBinding Datas}"
                                                               StrokeThickness="{TemplateBinding SeriesThickness}"
                                                               RolloverMarkerTemplate="{TemplateBinding RolloverMarkerTemplate}"/>
                        </sciChart:SciChartSurface.RenderableSeries>
                        <sciChart:SciChartSurface.ChartModifier>
                            <sciChart:ModifierGroup>
                                <sciChart:RolloverModifier x:Name="PartRolloverModifier"
                                                           IsEnabled="{TemplateBinding IsEnableRolloverModifier}"
                                                           ShowTooltipOn="Always"
                                                           UseInterpolation="True" 
                                                           ShowAxisLabels="False"
                                                           DrawVerticalLine="False"
                                                           TooltipLabelTemplate="{TemplateBinding TooltipLabelTemplate}" />
                            </sciChart:ModifierGroup>
                        </sciChart:SciChartSurface.ChartModifier>
                        <sciChart:SciChartSurface.Annotations>
                            <sciChart:VerticalLineAnnotation x:Name="PartVerticalLine" 
                                                             Style="{TemplateBinding DataSelectionLineStyle}"
                                                             Visibility="{TemplateBinding DataSelectionLineVisibility}" />
                        </sciChart:SciChartSurface.Annotations>
                    </sciChart:SciChartSurface>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>