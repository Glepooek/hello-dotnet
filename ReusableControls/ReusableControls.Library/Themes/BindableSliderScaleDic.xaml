<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Digihail.Controls"
                    xmlns:sciChart="http://schemas.abtsoftware.co.uk/scichart">
    <!--#region BindableSliderScale-->
    <SolidColorBrush x:Key="SliderThumb.Static.ForegroundBSS" Color="#FFE5E5E5"/>
    <SolidColorBrush x:Key="SliderThumb.MouseOver.BackgroundBSS" Color="#FFDCECFC"/>
    <SolidColorBrush x:Key="SliderThumb.MouseOver.BorderBSS" Color="#FF7Eb4EA"/>
    <SolidColorBrush x:Key="SliderThumb.Pressed.BackgroundBSS" Color="#FFDAECFC"/>
    <SolidColorBrush x:Key="SliderThumb.Pressed.BorderBSS" Color="#FF569DE5"/>
    <SolidColorBrush x:Key="SliderThumb.Disabled.BackgroundBSS" Color="#FFF0F0F0"/>
    <SolidColorBrush x:Key="SliderThumb.Disabled.BorderBSS" Color="#FFD9D9D9"/>
    <SolidColorBrush x:Key="SliderThumb.Static.BackgroundBSS" Color="#FFF0F0F0"/>
    <SolidColorBrush x:Key="SliderThumb.Static.BorderBSS" Color="#FFACACAC"/>
    <ControlTemplate x:Key="SliderThumbHorizontalTopBSS" TargetType="{x:Type Thumb}">
        <Grid HorizontalAlignment="Center" UseLayoutRounding="True" VerticalAlignment="Center">
            <Path x:Name="grip" Data="M 0,6 C0,6 5.5,0 5.5,0 5.5,0 11,6 11,6 11,6 11,18 11,18 11,18 0,18 0,18 0,18 0,6 0,6 z" Fill="{StaticResource SliderThumb.Static.BackgroundBSS}" Stretch="Fill" SnapsToDevicePixels="True" Stroke="{StaticResource SliderThumb.Static.BorderBSS}" StrokeThickness="1" UseLayoutRounding="True" VerticalAlignment="Center"/>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Fill" TargetName="grip" Value="{StaticResource SliderThumb.MouseOver.BackgroundBSS}"/>
                <Setter Property="Stroke" TargetName="grip" Value="{StaticResource SliderThumb.MouseOver.BorderBSS}"/>
            </Trigger>
            <Trigger Property="IsDragging" Value="true">
                <Setter Property="Fill" TargetName="grip" Value="{StaticResource SliderThumb.Pressed.BackgroundBSS}"/>
                <Setter Property="Stroke" TargetName="grip" Value="{StaticResource SliderThumb.Pressed.BorderBSS}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="false">
                <Setter Property="Fill" TargetName="grip" Value="{StaticResource SliderThumb.Disabled.BackgroundBSS}"/>
                <Setter Property="Stroke" TargetName="grip" Value="{StaticResource SliderThumb.Disabled.BorderBSS}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <ControlTemplate x:Key="SliderThumbHorizontalBottomBSS" TargetType="{x:Type Thumb}">
        <Grid HorizontalAlignment="Center" UseLayoutRounding="True" VerticalAlignment="Center">
            <Path x:Name="grip" Data="M 0,12 C0,12 5.5,18 5.5,18 5.5,18 11,12 11,12 11,12 11,0 11,0 11,0 0,0 0,0 0,0 0,12 0,12 z" Fill="{StaticResource SliderThumb.Static.BackgroundBSS}" Stretch="Fill" SnapsToDevicePixels="True" Stroke="{StaticResource SliderThumb.Static.BorderBSS}" StrokeThickness="1" UseLayoutRounding="True" VerticalAlignment="Center"/>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Fill" TargetName="grip" Value="{StaticResource SliderThumb.MouseOver.BackgroundBSS}"/>
                <Setter Property="Stroke" TargetName="grip" Value="{StaticResource SliderThumb.MouseOver.BorderBSS}"/>
            </Trigger>
            <Trigger Property="IsDragging" Value="true">
                <Setter Property="Fill" TargetName="grip" Value="{StaticResource SliderThumb.Pressed.BackgroundBSS}"/>
                <Setter Property="Stroke" TargetName="grip" Value="{StaticResource SliderThumb.Pressed.BorderBSS}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="false">
                <Setter Property="Fill" TargetName="grip" Value="{StaticResource SliderThumb.Disabled.BackgroundBSS}"/>
                <Setter Property="Stroke" TargetName="grip" Value="{StaticResource SliderThumb.Disabled.BorderBSS}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <SolidColorBrush x:Key="SliderThumb.Track.BorderBSS" Color="#FFD6D6D6"/>
    <SolidColorBrush x:Key="SliderThumb.Track.BackgroundBSS" Color="#FFE7EAEA"/>
    <Style x:Key="RepeatButtonTransparentLeftBSS" TargetType="{x:Type RepeatButton}">
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType=local:BindableSliderScale,AncestorLevel=1},Path=LeftRepeatButtonColor}"/>
        <Setter Property="Focusable" Value="false"/>
        <Setter Property="IsTabStop" Value="false"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Rectangle Fill="{TemplateBinding Background}" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="RepeatButtonTransparentRightBSS" TargetType="{x:Type RepeatButton}">
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType=local:BindableSliderScale,AncestorLevel=1},Path=RightRepeatButtonColor}"/>
        <Setter Property="Focusable" Value="false"/>
        <Setter Property="IsTabStop" Value="false"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Rectangle Fill="{TemplateBinding Background}" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <ControlTemplate x:Key="SliderThumbHorizontalDefaultBSS" TargetType="{x:Type Thumb}">
        <Grid HorizontalAlignment="Center" UseLayoutRounding="True" VerticalAlignment="Center" Background="Transparent">
            <Path x:Name="grip" Visibility="Collapsed" Data="M 0,0 C0,0 11,0 11,0 11,0 11,18 11,18 11,18 0,18 0,18 0,18 0,0 0,0 z" Stretch="Fill" SnapsToDevicePixels="True" Stroke="{StaticResource SliderThumb.Static.BorderBSS}" StrokeThickness="1" UseLayoutRounding="True" VerticalAlignment="Center"/>
            <Border CornerRadius="10,10,0,0" Width="15" Height="26" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="1" BorderBrush="#FF333333">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0.53,0" EndPoint="0.53,1">
                        <LinearGradientBrush.GradientStops>
                            <GradientStopCollection>
                                <GradientStop Color="#FF5b5b5b" Offset="0"/>
                                <GradientStop Color="#FF333333" Offset="1" />
                            </GradientStopCollection>
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border CornerRadius="18,18,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="0" Color="#999999" Direction="270" Opacity="1" ShadowDepth="1"></DropShadowEffect>
                </Border.Effect>
                <Border Height="10" Width="4" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF00CCFF" CornerRadius="1" BorderBrush="#FF4068A4" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Color="#FF00CCFF" Direction="0" Opacity="0.65" ShadowDepth="0"></DropShadowEffect>
                    </Border.Effect>
                </Border>
            </Border>
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="SliderHorizontalBSS" TargetType="{x:Type local:BindableSliderScale}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <ItemsControl Grid.Row="0"
                          x:Name="TopTickLabels"
                          Visibility="Collapsed"
                          ItemsPanel="{TemplateBinding AxisItemsPanel}"
                          ItemsSource="{Binding ScaleValueList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:BindableSliderScale}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border HorizontalAlignment="{Binding ContainerHorizontalAlignment}"
                                Width="{Binding Size}" >
                            <StackPanel VerticalAlignment="Top">
                                <TextBlock Text="{Binding Label}" 
                                           Margin="{Binding Margin}"
                                           HorizontalAlignment="{Binding LabelHorizontalAlignment}" 
                                           Style="{Binding LabelStyle, RelativeSource={RelativeSource AncestorType=local:BindableSliderScale}}"/>
                                <Border  Style="{Binding ScaleStyle, RelativeSource={RelativeSource AncestorType=local:BindableSliderScale}}" 
                                        HorizontalAlignment="{Binding LabelHorizontalAlignment}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Border x:Name="border" Grid.Row="1" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Border x:Name="TrackBackground" BorderBrush="{StaticResource SliderThumb.Track.BorderBSS}" BorderThickness="1" Background="Transparent" Height="4.0" Margin="5,0" Grid.Row="1" VerticalAlignment="center">
                        <Canvas Margin="-6,-1">
                            <Rectangle x:Name="PART_SelectionRange" Fill="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Height="4.0" Visibility="Hidden"/>
                        </Canvas>
                    </Border>
                    <Track x:Name="PART_Track" Grid.Row="1" Margin="-6,0,-6,0">
                        <Track.DecreaseRepeatButton>
                            <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Style="{StaticResource RepeatButtonTransparentLeftBSS}"/>
                        </Track.DecreaseRepeatButton>
                        <Track.IncreaseRepeatButton>
                            <RepeatButton Command="{x:Static Slider.IncreaseLarge}" Style="{StaticResource RepeatButtonTransparentRightBSS}"/>
                        </Track.IncreaseRepeatButton>
                        <Track.Thumb>
                            <Thumb x:Name="Thumb" Focusable="False" Height="18" OverridesDefaultStyle="True" Template="{StaticResource SliderThumbHorizontalDefaultBSS}" VerticalAlignment="Center" Width="11"/>
                        </Track.Thumb>
                    </Track>
                </Grid>
            </Border>
            <ItemsControl Grid.Row="2"
                          x:Name="BottomTickLabels"
                          Visibility="Collapsed"
                          ItemsPanel="{TemplateBinding AxisItemsPanel}"
                          ItemsSource="{Binding ScaleValueList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:BindableSliderScale}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border HorizontalAlignment="{Binding ContainerHorizontalAlignment}"
                                Width="{Binding Size}" >
                            <StackPanel VerticalAlignment="Top">
                                <Border Style="{Binding ScaleStyle, RelativeSource={RelativeSource AncestorType=local:BindableSliderScale}}"
                                        HorizontalAlignment="{Binding LabelHorizontalAlignment}" />
                                <TextBlock Text="{Binding Label}" 
                                           Margin="{Binding Margin}"
                                           HorizontalAlignment="{Binding LabelHorizontalAlignment}"
                                           Style="{Binding LabelStyle, RelativeSource={RelativeSource AncestorType=local:BindableSliderScale}}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="TickPlacement" Value="TopLeft">
                <Setter TargetName="TopTickLabels" Property="Visibility" Value="Visible" />
            </Trigger>
            <Trigger Property="TickPlacement" Value="BottomRight">
                <Setter TargetName="BottomTickLabels" Property="Visibility" Value="Visible" />
            </Trigger>
            <Trigger Property="TickPlacement" Value="Both">
                <Setter TargetName="TopTickLabels" Property="Visibility" Value="Visible" />
                <Setter TargetName="BottomTickLabels" Property="Visibility" Value="Visible" />
            </Trigger>
            <Trigger Property="TickPlacement" Value="None">
                <Setter TargetName="TopTickLabels" Property="Visibility" Value="Collapsed" />
                <Setter TargetName="BottomTickLabels" Property="Visibility" Value="Collapsed" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style TargetType="{x:Type local:BindableSliderScale}">
        <Setter Property="AutoToolTipContent">
            <Setter.Value>
                <ContentControl>
                    <Border CornerRadius="5"
                                    Background="#60111111"
                                    BorderThickness="0">
                        <TextBlock Margin="10, 5"
                                           Foreground="#FF40C3E3"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Text="{Binding AutoToolTipText}"/>
                    </Border>
                </ContentControl>
            </Setter.Value>
        </Setter>
        <Setter Property="ScaleStyle">
            <Setter.Value>
                <Style TargetType="Border">
                    <Setter Property="Height" Value="6" />
                    <Setter Property="Width" Value="1" />
                    <Setter Property="Background" Value="#FFFFFF" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="LabelStyle">
            <Setter.Value>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="16" />
                    <Setter Property="Foreground" Value="#9F9FA3" />
                    <Setter Property="FontFamily" Value="MicrosoftYaHei" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="AxisItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <Grid />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Foreground" Value="{StaticResource SliderThumb.Static.ForegroundBSS}"/>
        <Setter Property="Template" Value="{StaticResource SliderHorizontalBSS}"/>
    </Style>
    <!--#endregion-->
</ResourceDictionary>