<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Digihail.Controls"
                    xmlns:sciChart="http://schemas.abtsoftware.co.uk/scichart">
    <!--#region FastLineScatterChart-->
    <Style TargetType="{x:Type local:FastLineScatterChart}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FastLineScatterChart}">
                    <sciChart:SciChartSurface x:Name="PartSciChartSurface" 
                                                  Margin="{TemplateBinding Margin}"
                                                  BorderBrush="{TemplateBinding ChartBorderBrush}"
                                                  sciChart:ThemeManager.Theme="BlackSteel"
                                                  XAxis="{Binding ChartXAxis, RelativeSource={RelativeSource AncestorType=local:FastLineScatterChart}}"
                                                  YAxis="{Binding ChartYAxis, RelativeSource={RelativeSource AncestorType=local:FastLineScatterChart}}"
                                                  Background="{TemplateBinding SurfaceBackground}">
                        <sciChart:SciChartSurface.GridLinesPanelStyle>
                            <Style TargetType="{x:Type sciChart:GridLinesPanel}">
                                <Setter Property="BorderThickness" Value="{Binding ChartBorderThickness, RelativeSource={RelativeSource AncestorType=local:FastLineScatterChart}}" />
                            </Style>
                        </sciChart:SciChartSurface.GridLinesPanelStyle>
                        <sciChart:SciChartSurface.RenderableSeries>
                            <sciChart:FastLineRenderableSeries SeriesColor="{TemplateBinding LineDatasColor}"
                                                               PointMarker="{TemplateBinding LineDatasPointMarker}"
                                                               DataSeries="{TemplateBinding LineDatas}" />
                            <sciChart:XyScatterRenderableSeries DataSeries="{TemplateBinding ScatterDatas}" 
                                                               PointMarker="{TemplateBinding ScatterDatasPointMarker}"/>
                        </sciChart:SciChartSurface.RenderableSeries>
                    </sciChart:SciChartSurface>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->
</ResourceDictionary>