<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Digihail.Controls"
                    xmlns:sciChart="http://schemas.abtsoftware.co.uk/scichart">
    <!--#region StackedSideBySideChart-->
    <Style TargetType="{x:Type local:StackedSideBySideChart}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:StackedSideBySideChart}">
                    <Grid>
                        <sciChart:SciChartSurface x:Name="PartSciChartSurface" 
                                                  Margin="{TemplateBinding Margin}"
                                                  BorderBrush="{TemplateBinding ChartBorderBrush}"
                                                  Background="{TemplateBinding SurfaceBackground}"
                                                  sciChart:ThemeManager.Theme="BlackSteel">
                            <sciChart:SciChartSurface.GridLinesPanelStyle>
                                <Style TargetType="{x:Type sciChart:GridLinesPanel}">
                                    <Setter Property="BorderThickness" Value="{Binding ChartBorderThickness, RelativeSource={RelativeSource AncestorType=local:StackedSideBySideChart}}" />
                                </Style>
                            </sciChart:SciChartSurface.GridLinesPanelStyle>
                            <sciChart:SciChartSurface.XAxis>
                                <sciChart:NumericAxis LabelProvider="{Binding LabelFormatter, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:StackedSideBySideChart}}"
                                                      DrawMinorTicks="{TemplateBinding XDrawMinorTicks}"
                                                      DrawMinorGridLines="{TemplateBinding XAxisMinorGridLines}"
                                                      DrawMajorGridLines="{TemplateBinding XAxisMajorGridLines}"
                                                      DrawMajorBands="{TemplateBinding XAxisMajorBands}"
                                                      MajorDelta="{TemplateBinding XAxisMajorDelta}"
                                                      MinorDelta="{TemplateBinding XAxisMinorDelta}"
                                                      VisibleRange="{Binding XRange, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:StackedSideBySideChart}}"
                                                      TickTextBrush="{TemplateBinding XTickTextBrush}"
                                                      AutoTicks="False" />
                            </sciChart:SciChartSurface.XAxis>
                            <sciChart:SciChartSurface.YAxis>
                                <sciChart:NumericAxis Visibility="{TemplateBinding YAxisVisibility}" 
                                                      AxisAlignment="{TemplateBinding YAxisAlignment}" 
                                                      Background="{TemplateBinding YAxisBackground}"
                                                      DrawMajorGridLines="{TemplateBinding YAxisMajorGridLines}"
                                                      DrawMinorGridLines="{TemplateBinding YAxisMinorGridLines}"
                                                      DrawMajorBands="{TemplateBinding YAxisMajorBands}"
                                                      DrawMinorTicks="{TemplateBinding YDrawMinorTicks}"
                                                      TickTextBrush="{TemplateBinding YTickTextBrush}"
                                                      GrowBy="{TemplateBinding YGrowByRange}"
                                                      AutoRange="Always" />
                            </sciChart:SciChartSurface.YAxis>
                        </sciChart:SciChartSurface>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->
</ResourceDictionary>