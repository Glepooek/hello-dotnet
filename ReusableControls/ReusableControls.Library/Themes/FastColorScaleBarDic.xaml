<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Digihail.Controls"
                    xmlns:sciChart="http://schemas.abtsoftware.co.uk/scichart">
    <!--#region FastColorScaleBar-->
    <Style TargetType="{x:Type local:FastColorScaleBar}">
        <Setter Property="CustomLabelStyle">
            <Setter.Value>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="Foreground" Value="#CCCCCC" />
                    <Setter Property="FontFamily" Value="MicrosoftYaHei" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="CustomAxisItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <Grid />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FastColorScaleBar}">
                    <Grid>
                        <Grid x:Name="VerticalScale"
                              MinHeight="{TemplateBinding Height}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition MinWidth="{TemplateBinding ScaleBarWidth}" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <ItemsControl Grid.Column="0" 
                                          x:Name="LeftTicks"
                                          ItemsPanel="{TemplateBinding CustomAxisItemsPanel}"
                                          ItemsSource="{Binding ScaleValueList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:FastColorScaleBar}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border VerticalAlignment="{Binding ContainerVerticalAlignment}"
                                                Height="{Binding Size}">
                                            <StackPanel HorizontalAlignment="Right"
                                                        Orientation="Horizontal">
                                                <TextBlock Margin="0,0,2,0" 
                                                           Text="{Binding Label}" 
                                                           VerticalAlignment="{Binding LabelVerticalAlignment}"
                                                           Style="{Binding CustomLabelStyle, RelativeSource={RelativeSource AncestorType=local:FastColorScaleBar}}" />
                                                <Border Style="{Binding CustomScaleStyle, RelativeSource={RelativeSource AncestorType=local:FastColorScaleBar}}"
                                                        VerticalAlignment="{Binding LabelVerticalAlignment}" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <Rectangle Grid.Column="1"
                                       Fill="{TemplateBinding ScaleColor}" />
                            <ItemsControl Grid.Column="2" 
                                          x:Name="RightTicks"
                                          ItemsPanel="{TemplateBinding CustomAxisItemsPanel}"
                                          ItemsSource="{Binding ScaleValueList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:FastColorScaleBar}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border VerticalAlignment="{Binding ContainerVerticalAlignment}"
                                                Height="{Binding Size}">
                                            <StackPanel HorizontalAlignment="Left"
                                                        Orientation="Horizontal">
                                                <Border Style="{Binding CustomScaleStyle, RelativeSource={RelativeSource AncestorType=local:FastColorScaleBar}}"
                                                        VerticalAlignment="{Binding LabelVerticalAlignment}" />
                                                <TextBlock Margin="2,0,0,0" 
                                                           Text="{Binding Label}" 
                                                           VerticalAlignment="{Binding LabelVerticalAlignment}"
                                                           Style="{Binding CustomLabelStyle, RelativeSource={RelativeSource AncestorType=local:FastColorScaleBar}}" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                        <Grid x:Name="HorizontalScale"
                              MinWidth="{TemplateBinding Width}">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition MinHeight="{TemplateBinding ScaleBarHeight}" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Border Grid.Column="1" />
                            <ItemsControl Grid.Row="0" 
                                          x:Name="TopTicks"
                                          ItemsPanel="{TemplateBinding CustomAxisItemsPanel}"
                                          ItemsSource="{Binding ScaleValueList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:FastColorScaleBar}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="{Binding ContainerHorizontalAlignment}"
                                                Width="{Binding Size}" >
                                            <StackPanel VerticalAlignment="Top">
                                                <TextBlock Margin="0,0,0,2" 
                                                           Text="{Binding Label}" 
                                                           HorizontalAlignment="{Binding LabelHorizontalAlignment}" 
                                                           Style="{Binding CustomLabelStyle, RelativeSource={RelativeSource AncestorType=local:FastColorScaleBar}}"/>
                                                <Border Style="{Binding CustomScaleStyle, RelativeSource={RelativeSource AncestorType=local:FastColorScaleBar}}"
                                                        HorizontalAlignment="{Binding LabelHorizontalAlignment}" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <Rectangle Grid.Row="1"
                                       Fill="{TemplateBinding ScaleColor}" />
                            <ItemsControl Grid.Row="2" 
                                          x:Name="BottomTicks"
                                          ItemsPanel="{TemplateBinding CustomAxisItemsPanel}"
                                          ItemsSource="{Binding ScaleValueList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:FastColorScaleBar}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="{Binding ContainerHorizontalAlignment}"
                                                Width="{Binding Size}" >
                                            <StackPanel VerticalAlignment="Top">
                                                <Border Style="{Binding CustomScaleStyle, RelativeSource={RelativeSource AncestorType=local:FastColorScaleBar}}"
                                                        HorizontalAlignment="{Binding LabelHorizontalAlignment}" />
                                                <TextBlock Margin="0,2,0,0" 
                                                           Text="{Binding Label}" 
                                                           HorizontalAlignment="{Binding LabelHorizontalAlignment}"
                                                           Style="{Binding CustomLabelStyle, RelativeSource={RelativeSource AncestorType=local:FastColorScaleBar}}"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="ScaleOrientation" Value="Horizontal">
                            <Setter TargetName="VerticalScale" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="HorizontalScale" Property="Visibility" Value="Visible" />
                            <Setter Property="CustomScaleStyle">
                                <Setter.Value>
                                    <Style TargetType="Border">
                                        <Setter Property="Height" Value="6" />
                                        <Setter Property="Width" Value="1" />
                                        <Setter Property="Background" Value="#FFFFFF" />
                                    </Style>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="ScaleOrientation" Value="Vertical">
                            <Setter TargetName="VerticalScale" Property="Visibility" Value="Visible" />
                            <Setter TargetName="HorizontalScale" Property="Visibility" Value="Collapsed" />
                            <Setter Property="CustomScaleStyle">
                                <Setter.Value>
                                    <Style TargetType="Border">
                                        <Setter Property="Height" Value="1" />
                                        <Setter Property="Width" Value="6" />
                                        <Setter Property="Background" Value="#FFFFFF" />
                                    </Style>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="TickPlacement" Value="None">
                            <Setter TargetName="TopTicks" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="BottomTicks" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="RightTicks" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="LeftTicks" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="TickPlacement" Value="Both">
                            <Setter TargetName="TopTicks" Property="Visibility" Value="Visible" />
                            <Setter TargetName="BottomTicks" Property="Visibility" Value="Visible" />
                            <Setter TargetName="RightTicks" Property="Visibility" Value="Visible" />
                            <Setter TargetName="LeftTicks" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="TickPlacement" Value="BottomRight">
                            <Setter TargetName="TopTicks" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="BottomTicks" Property="Visibility" Value="Visible" />
                            <Setter TargetName="RightTicks" Property="Visibility" Value="Visible" />
                            <Setter TargetName="LeftTicks" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="TickPlacement" Value="TopLeft">
                            <Setter TargetName="TopTicks" Property="Visibility" Value="Visible" />
                            <Setter TargetName="BottomTicks" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="RightTicks" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="LeftTicks" Property="Visibility" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->
</ResourceDictionary>