<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Digihail.Controls"
                    xmlns:sciChart="http://schemas.abtsoftware.co.uk/scichart">
    <!--#region FastColumnChart-->
    <Style TargetType="{x:Type local:FastColumnChart}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FastColumnChart}">
                    <Grid>
                        <sciChart:SciChartSurface x:Name="PartSciChartSurface" 
                                                  Margin="{TemplateBinding Margin}"
                                                  BorderBrush="{TemplateBinding ChartBorderBrush}"
                                                  XAxis="{Binding ChartXAxis, RelativeSource={RelativeSource AncestorType=local:FastColumnChart}}"
                                                  YAxis="{Binding ChartYAxis, RelativeSource={RelativeSource AncestorType=local:FastColumnChart}}"
                                                  Background="{TemplateBinding SurfaceBackground}"
                                                  sciChart:ThemeManager.Theme="BlackSteel">
                            <sciChart:SciChartSurface.GridLinesPanelStyle>
                                <Style TargetType="sciChart:GridLinesPanel">
                                    <Setter Property="BorderThickness" Value="{Binding ChartBorderThickness, RelativeSource={RelativeSource AncestorType=local:FastColumnChart}}" />
                                </Style>
                            </sciChart:SciChartSurface.GridLinesPanelStyle>
                            <sciChart:SciChartSurface.RenderableSeries>
                                <sciChart:FastColumnRenderableSeries DataPointWidth="{TemplateBinding DataWidth}"
                                                                     Opacity="{TemplateBinding DataOpacity}"
                                                                     UseUniformWidth="{TemplateBinding UniformWidth}"
                                                                     DataSeries="{TemplateBinding Datas}"
                                                                     FillBrush="{TemplateBinding DataBrush}" />
                            </sciChart:SciChartSurface.RenderableSeries>
                        </sciChart:SciChartSurface>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->
</ResourceDictionary>