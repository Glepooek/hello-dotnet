<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Digihail.Controls"
                    xmlns:sciChart="http://schemas.abtsoftware.co.uk/scichart">
    <!--#region FastMountainChart-->
    <Style TargetType="{x:Type local:FastMountainChart}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FastMountainChart}">
                    <sciChart:SciChartSurface x:Name="PartSciChartSurface"
                                              Margin="{TemplateBinding Margin}"
                                              BorderBrush="{TemplateBinding ChartBorderBrush}"
                                              sciChart:ThemeManager.Theme="BlackSteel"
                                              XAxis="{Binding ChartXAxis, RelativeSource={RelativeSource AncestorType=local:FastMountainChart}}"
                                              YAxis="{Binding ChartYAxis, RelativeSource={RelativeSource AncestorType=local:FastMountainChart}}"
                                              Background="{TemplateBinding SurfaceBackground}">
                        <sciChart:SciChartSurface.GridLinesPanelStyle>
                            <Style TargetType="{x:Type sciChart:GridLinesPanel}">
                                <Setter Property="BorderThickness" Value="{Binding ChartBorderThickness, RelativeSource={RelativeSource AncestorType=local:FastMountainChart}}" />
                            </Style>
                        </sciChart:SciChartSurface.GridLinesPanelStyle>
                        <sciChart:SciChartSurface.RenderableSeries>
                            <sciChart:FastMountainRenderableSeries DataSeries="{TemplateBinding Datas}" 
                                                                   AreaBrush="{TemplateBinding MountainBrush}"
                                                                   SeriesColor="{TemplateBinding PeakColor}"/>
                        </sciChart:SciChartSurface.RenderableSeries>
                    </sciChart:SciChartSurface>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->
</ResourceDictionary>