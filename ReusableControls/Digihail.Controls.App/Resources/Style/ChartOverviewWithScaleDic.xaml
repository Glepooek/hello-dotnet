<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:s="http://schemas.abtsoftware.co.uk/scichart" 
                    xmlns:chartOverviewWithScale="clr-namespace:Digihail.Controls;assembly=ReusableControls.Library">
    
    <Style TargetType="Border" x:Key="OverviewRestThumb">
        <Setter Property="Width" Value="7" />
        <Setter Property="Background" Value="#3392D2" />
    </Style>
    <Style TargetType="Border" x:Key="OverviewRestStyle">
        <Setter Property="BorderBrush" Value="#22737D" />
    </Style>
    <chartOverviewWithScale:OverviewMarginConverter x:Key="OverviewMarginConverter" />
    <ControlTemplate TargetType="{x:Type chartOverviewWithScale:ChartOverviewWithScale}" x:Key="OverviewTemplate">
        <Grid HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                              Width="{Binding Path=OverviewSciChart.XAxis.ActualWidth, RelativeSource={RelativeSource AncestorType=chartOverviewWithScale:ChartOverviewWithScale}}">
            <Grid.Margin>
                <MultiBinding Converter="{StaticResource OverviewMarginConverter}">
                    <MultiBinding.Bindings>
                        <Binding Path ="OverviewSciChart.YAxis.ActualWidth" RelativeSource="{RelativeSource AncestorType=chartOverviewWithScale:ChartOverviewWithScale}" />
                        <Binding Path="OverviewSciChart.Padding.Left" RelativeSource="{RelativeSource AncestorType=chartOverviewWithScale:ChartOverviewWithScale}" />
                    </MultiBinding.Bindings>
                </MultiBinding>
            </Grid.Margin>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <s:SciChartOverview Grid.Row="0" x:Name="Overview"
                                                       s:ThemeManager.Theme="BlackSteel"
                                                       Background="Transparent"
                                                       SeriesColor="{TemplateBinding DatasColor}"
                                                       Template="{TemplateBinding OverviewTemplate}"
                                                       ParentSurface="{TemplateBinding OverviewSciChart}"
                                                       SelectedRange="{Binding Path=OverviewSciChart.XAxis.VisibleRange, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=chartOverviewWithScale:ChartOverviewWithScale}}" />
            <Border Grid.Row="0" Height="45" Width="1" Background="#22737D" HorizontalAlignment="Right" />
            <Border Grid.Row="1" Background="#22737D" Height="12" Padding="2,0,2,0">
                <ItemsControl 
                                          x:Name="OverviewTicks"
                                          VerticalAlignment="Top"
                                          Margin="0,-6,0,0"
                                          ItemsSource="{Binding ScaleValueList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=chartOverviewWithScale:ChartOverviewWithScale}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border HorizontalAlignment="{Binding ContainerHorizontalAlignment}" 
                                                    Width="{Binding Size}" >
                                <StackPanel VerticalAlignment="Bottom">
                                    <TextBlock Margin="0,10,0,0" 
                                                           Text="{Binding Label}" 
                                                           HorizontalAlignment="{Binding LabelHorizontalAlignment}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontSize" Value="10" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Setter Property="FontFamily" Value="Microsoft YaHei" />
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>