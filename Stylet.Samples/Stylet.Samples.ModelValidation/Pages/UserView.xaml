<UserControl x:Class="Stylet.Samples.ModelValidation.Pages.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:s="https://github.com/canton7/Stylet"
             xmlns:xaml="clr-namespace:Stylet.Samples.ModelValidation.Xaml"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="Margin"
                    Value="5,0,5,0" />
            <Setter Property="HorizontalAlignment"
                    Value="Left" />
        </Style>
        <Style x:Key="CommonStyle"
               TargetType="{x:Type Control}">
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="Margin"
                    Value="0,2,40,20" />
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <DockPanel LastChildFill="False">
                            <TextBlock Width="{Binding ElementName=CustomAdorner, Path=ActualWidth}"
                                       HorizontalAlignment="Left"
                                       DockPanel.Dock="Bottom"
                                       Foreground="OrangeRed"
                                       Text="{Binding ElementName=CustomAdorner, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}"
                                       TextTrimming="WordEllipsis" />
                            <Border Width="20"
                                    Height="20"
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Top"
                                    Background="OrangeRed"
                                    CornerRadius="5"
                                    DockPanel.Dock="Right">
                                <TextBlock HorizontalAlignment="center"
                                           VerticalAlignment="center"
                                           FontWeight="Bold"
                                           Foreground="white"
                                           Text="!" />
                            </Border>
                            <Border BorderBrush="red"
                                    BorderThickness="1">
                                <AdornedElementPlaceholder Name="CustomAdorner"
                                                           VerticalAlignment="Center" />
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style BasedOn="{StaticResource CommonStyle}"
               TargetType="{x:Type TextBox}" />
        <Style BasedOn="{StaticResource CommonStyle}"
               TargetType="{x:Type PasswordBox}" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Grid.Column="0"
               Target="{Binding ElementName=UserName}">
            UserName:
        </Label>
        <TextBox x:Name="UserName"
                 Grid.Row="0"
                 Grid.Column="1"
                 Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="1"
               Grid.Column="0"
               Target="{Binding ElementName=Email}">
            Email:
        </Label>
        <TextBox x:Name="Email"
                 Grid.Row="1"
                 Grid.Column="1"
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="2"
               Grid.Column="0"
               Target="{Binding ElementName=Age}">
            Age:
        </Label>
        <TextBox x:Name="Age"
                 Grid.Row="2"
                 Grid.Column="1"
                 Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="3"
               Grid.Column="0"
               Target="{Binding ElementName=Password}">
            Password:
        </Label>
        <PasswordBox x:Name="Password"
                     Grid.Row="3"
                     Grid.Column="1"
                     xaml:Secure.Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="4"
               Grid.Column="0"
               Target="{Binding ElementName=PasswordConfirmation}">
            Password Confirmation:
        </Label>
        <PasswordBox x:Name="PasswordConfirmation"
                     Grid.Row="4"
                     Grid.Column="1"
                     xaml:Secure.Password="{Binding PasswordConfirmation, UpdateSourceTrigger=PropertyChanged}" />

        <CheckBox Grid.Row="5"
                  Grid.Column="0"
                  IsChecked="{Binding ShouldAutoValidate}">
            Auto-Validate
        </CheckBox>
        <Button Grid.Row="5"
                Grid.Column="1"
                HorizontalAlignment="Left"
                Command="{s:Action Submit}">
            Submit
        </Button>
    </Grid>
</UserControl>
