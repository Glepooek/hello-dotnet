<Window x:Class="SocketClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="客户端"
        Height="350"
        Width="525">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBox Text="127.0.0.1"
                     Height="30"
                     VerticalContentAlignment="Center"
                     BorderBrush="Gray"
                     x:Name="txtIP" />
            <TextBox Text="5000"
                     Height="30"
                     Margin="10,0,0,0"
                     VerticalContentAlignment="Center"
                     BorderBrush="Gray"
                     x:Name="txtPort" />
            <Button Width="60"
                    Height="30"
                    Margin="10,0,0,0"
                    Content="开始连接"
                    Click="btnConnect_Click"
                    x:Name="btnConnect" />
        </StackPanel>

        <TextBox Grid.Row="1"
                 Margin="0,3,0,3"
                 BorderBrush="Gray"
                 TextWrapping="Wrap"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 x:Name="txtMsgBord" />

        <TextBox Grid.Row="2"
                 Margin="0,3,0,3"
                 BorderBrush="Gray"
                 x:Name="txtMsg" />

        <Button Grid.Row="3"
                Width="60"
                Height="30"
                HorizontalAlignment="Right"
                Margin="0,0,5,0"
                Content="发送信息"
                Click="btnSend_Click"
                IsDefault="True"
                x:Name="btnSend" />
    </Grid>
</Window>
