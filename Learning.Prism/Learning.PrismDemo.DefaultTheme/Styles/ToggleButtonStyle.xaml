<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style  x:Key="Titlebar_ToggleButton_Style"
            TargetType="{x:Type ToggleButton}">
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="IsThreeState"
                Value="False" />
        <Setter Property="Width"
                Value="46" />
        <Setter Property="Height"
                Value="31" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="ToolTip"
                Value="最大化" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Border x:Name="imgborder">
                        <Image x:Name="img"
                               Height="20"
                               Width="27"
                               Source="{DynamicResource ico_max}"
                               Stretch="Fill" />
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked"
                                 Value="True">
                            <Setter TargetName="img"
                                    Property="Source"
                                    Value="{DynamicResource ico_revert}" />
                            <Setter Property="ToolTip"
                                    Value="还原" />
                        </Trigger>
                        <Trigger Property="IsChecked"
                                 Value="False">
                            <Setter TargetName="img"
                                    Property="Source"
                                    Value="{DynamicResource ico_max}" />
                            <Setter Property="ToolTip"
                                    Value="最大化" />
                        </Trigger>
                        <Trigger Property="IsMouseOver"
                                 Value="true">
                            <Setter TargetName="imgborder"
                                    Property="Background"
                                    Value="#0095F9" />
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="true">
                            <Setter TargetName="imgborder"
                                    Property="Background"
                                    Value="#007ED2" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MicToggleButtonStyle"
           TargetType="{x:Type ToggleButton}">
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="IsThreeState"
                Value="False" />
        <Setter Property="Width"
                Value="20" />
        <Setter Property="Height"
                Value="20" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Image x:Name="image"
                           Source="{DynamicResource Mic_Normal}"
                           SnapsToDevicePixels="true">
                    </Image>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked"
                                 Value="True">
                            <Setter TargetName="image"
                                    Property="Source"
                                    Value="{DynamicResource Mic_Off_Normal}" />
                        </Trigger>
                        <Trigger Property="IsChecked"
                                 Value="False">
                            <Setter TargetName="image"
                                    Property="Source"
                                    Value="{DynamicResource Mic_Normal}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver"
                                 Value="true">
                            <Setter Property="Source"
                                    TargetName="image"
                                    Value="{DynamicResource Mic_Hover}" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver"
                                           Value="True" />
                                <Condition Property="IsChecked"
                                           Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="image"
                                    Property="Source"
                                    Value="{DynamicResource Mic_Off_Normal}" />
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

