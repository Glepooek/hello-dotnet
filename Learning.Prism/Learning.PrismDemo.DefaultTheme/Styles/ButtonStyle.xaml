<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Learning.PrismDemo.Controls;assembly=Learning.PrismDemo.Controls">

    <!--导航页Menu按钮样式-->
    <Style x:Key="MainMenu_ButtonStyle"
           TargetType="{x:Type controls:MainMenuItemControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:MainMenuItemControl}">
                    <Border SnapsToDevicePixels="True"
                            x:Name="outborder"
                            CornerRadius="20">
                        <Border.Background>
                            <ImageBrush x:Name="bor_Background"
                                        ImageSource="{Binding BackgroundImage,RelativeSource={RelativeSource AncestorType=controls:MainMenuItemControl,AncestorLevel=1}}"
                                        Stretch="UniformToFill" />
                        </Border.Background>
                        <Border x:Name="border"
                                Height="48"
                                CornerRadius="0,0,10,10"
                                VerticalAlignment="Bottom"
                                Background="#55000000"
                                SnapsToDevicePixels="true">
                            <TextBlock x:Name="txb_Content"
                                       Text="{TemplateBinding Content}"
                                       Foreground="#ffb5b5b5"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       FontFamily="Microsoft Yahei"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="true">
                            <Setter Property="Foreground"
                                    TargetName="txb_Content"
                                    Value="#ffffff" />
                            <Setter Property="BorderThickness"
                                    TargetName="outborder"
                                    Value="4" />
                            <Setter Property="BorderBrush"
                                    TargetName="outborder"
                                    Value="#ff00B7FE" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="true">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Opacity="1"
                                          Color="#FF4BB7F1"
                                          BlurRadius="30"
                                          ShadowDepth="0"
                                          Direction="10" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--Titlebar按钮样式-->
    <Style x:Key="Titlebar_ImageButton_Style"
           TargetType="{x:Type controls:ImageButton}">
        <Setter Property="Width"
                Value="46" />
        <Setter Property="Height"
                Value="31" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="ImageStretch"
                Value="Fill" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ImageButton}">
                    <Border x:Name="imgborder">
                        <Image x:Name="img"
                               Height="{TemplateBinding ImageHeight}"
                               Width="{TemplateBinding ImageWidth}"
                               Source="{TemplateBinding NormalImage}"
                               Stretch="{TemplateBinding ImageStretch}" />
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="true">
                            <Setter TargetName="imgborder"
                                    Property="Background"
                                    Value="#0095F9" />
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="true">
                            <Setter TargetName="imgborder"
                                    Property="Background"
                                    Value="#007ED2" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--MediaPlayer按钮样式-->
    <Style x:Key="MediaPlayer_ImageButton_Style"
           TargetType="{x:Type controls:ImageButton}">
        <Setter Property="Width"
                Value="46" />
        <Setter Property="Height"
                Value="31" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="ImageStretch"
                Value="Fill" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ImageButton}">
                    <Image x:Name="img"
                           Height="{TemplateBinding Height}"
                           Width="{TemplateBinding Width}"
                           Source="{TemplateBinding NormalImage}"
                           Stretch="{TemplateBinding ImageStretch}" />
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Source"
                                    TargetName="img"
                                    Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type controls:ImageButton},Mode=FindAncestor}, Path=HoverImage}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--ImageButton样式-->
    <Style x:Key="ImageButton_Style"
           TargetType="{x:Type controls:ImageButton}">
        <Setter Property="Width"
                Value="46" />
        <Setter Property="Height"
                Value="31" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="ImageStretch"
                Value="Fill" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ImageButton}">
                    <Image x:Name="img"
                           Height="{TemplateBinding Height}"
                           Width="{TemplateBinding Width}"
                           Source="{TemplateBinding NormalImage}"
                           Stretch="{TemplateBinding ImageStretch}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>