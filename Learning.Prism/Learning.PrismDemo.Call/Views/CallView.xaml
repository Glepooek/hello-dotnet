<UserControl x:Class="Learning.PrismDemo.Call.Views.CallView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:controls="clr-namespace:Learning.PrismDemo.Controls;assembly=Learning.PrismDemo.Controls"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Focusable="True">

    <UserControl.InputBindings>
        <KeyBinding Key="Esc"
                    Command="{Binding GoBackCommand}" />
    </UserControl.InputBindings>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <controls:ImageButton Content="GoBack"
                              HorizontalAlignment="Left"
                              Width="20"
                              Height="30"
                              ToolTip="回退"
                              Style="{DynamicResource ImageButton_Style}"
                              NormalImage="{DynamicResource Module_Goback}"
                              Command="{Binding GoBackCommand}" />

        <DockPanel Grid.Row="1"
                   Margin="0,10,0,0">
            <Border DockPanel.Dock="Left"
                    CornerRadius="5"
                    Background="{DynamicResource BorderBackground}"
                    Width="300"
                    Margin="0,0,10,0">
                <!--<StackPanel>
                    <Button Width="100"
                            Height="30"
                            Content="Start"
                            Command="{Binding StartCommand}" />
                    <Button Width="100"
                            Height="30"
                            Content="Stop"
                            Command="{Binding StopCommand}" />
                </StackPanel>-->
            </Border>

            <Border DockPanel.Dock="Right"
                    CornerRadius="5"
                    Background="{DynamicResource BorderBackground}">
                <!--<controls:MediaPlayerControl />-->
                <!--<controls:TimePickerControl MinTime="08:10:00"
                                            MaxTime="23:00:00"
                                            SelectedTime="{Binding SelectedTime, Mode=TwoWay}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectedTimeChanged">
                            <prism:InvokeCommandAction Command="{Binding SelectedTimeCommand}"
                                                       TriggerParameterPath="NewValue" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </controls:TimePickerControl>-->
                <!--<controls:BusyIndicator IsBusy="{Binding IsBusy}"
                                        CloseCommand="{Binding StopCommand}"
                                        Style="{DynamicResource BusyIndicator_Container_Style}">
                    <controls:BusyIndicator.BusyContent>
                        <TextBlock Text="正在加载;正在加载;正在加载;正在加载;正在加载;正在加载;正在加载;正在加载"
                                   TextWrapping="Wrap" />
                    </controls:BusyIndicator.BusyContent>
                </controls:BusyIndicator>-->
            </Border>
        </DockPanel>
    </Grid>
</UserControl>
