<Window x:Class="ManualAutoEventWaitHandle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ManualAutoEventWaitHandle"
        Height="450"
        Width="450">

    <StackPanel Orientation="Vertical" VerticalAlignment="Top">
        <StackPanel Orientation="Horizontal">
            <Button x:Name="Start"
                    Width=" 100"
                    Height="50"
                    Content="开始任务"
                    Click="Start_Click" />
            <Button x:Name="Pause"
                    Width=" 100"
                    Height="50"
                    Content="暂停任务"
                    Click="Pause_Click" />
            <Button x:Name="ReStart"
                    Width=" 100"
                    Height="50"
                    Content="恢复任务"
                    Click="Resume_Click" />
            <Button x:Name="Stop"
                    Width=" 100"
                    Height="50"
                    Content="停止任务"
                    Click="Stop_Click" />
        </StackPanel>

        <ListBox x:Name="listbox" Height="382" />
    </StackPanel>

</Window>
